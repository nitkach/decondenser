{
    "name": "decondenser",
    "displayName": "Decondenser",
    "publisher": "nitkach",
    "icon": "assets/marketplace-icon.png",
    "description": "Format your condensed code based on bracket placement.",
    "repository": {
        "type": "git",
        "url": "https://github.com/nitkach/decondenser.git"
    },
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "decondenser.bracketsPrettify",
                "title": "Decondenser: Prettify brackets"
            },
            {
                "command": "decondenser.bracketsPrettify.unescape",
                "title": "Decondenser: Prettify brackets (unescape)"
            }
        ],
        "configuration": {
            "title": "Decondenser",
            "properties": {
                "decondenser.indentationSize": {
                    "type": "integer",
                    "default": 4,
                    "description": "Number of spaces used for indentation"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.97.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "eslint": "^9.19.0",
        "typescript": "^5.7.3",
        "ts-loader": "^9.5.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}
